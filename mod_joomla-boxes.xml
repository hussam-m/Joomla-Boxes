<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Joomla-Boxes</name>
    <author>Hussam Almoharb</author>
    <authorEmail>hussam.am@gmail.com</authorEmail>
	  <authorUrl>http://hussam-m.com</authorUrl>
    <version>0.0.1</version>
    <description>Boxes for the homepage.</description>
    <files>
        <filename>mod_joomla-boxes.xml</filename>
        <filename module="mod_joomla-boxes">mod_joomla-boxes.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>
    </files>
    <config>
      <fields name="params">
        <fieldset name="basic">
         <field
            name="numberOfBoxes"
            type="list"
            label="Number of boxes"
            default="3"
            >
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
          </field>

          <field
             name="layout"
             type="list"
             label="Layout"
             default="horizontal"
             >
             <option value="horizontal">Horizontal</option>
             <option value="vertical">Vertical</option>
           </field>
        </fieldset>
        <fieldset name="box-1" label="Box 1" showon="numberOfBoxes:1,2,3">
          <field
              name="box-1-title"
              type="text"
              label="Title:"
          />
          <field
              name="box-1-content"
              type="textarea"
              label="Content:"
              rows="10" cols="80"
          />
          <field
              name="box-1-link-label"
              type="text"
              label="Link Label:"
          />
          <field
              name="box-1-link-url"
              type="url"
              label="Link URL:"
          />
        </fieldset>
        <fieldset name="box-2" label="Box 2" showon="numberOfBoxes:2,3">
          <field
              name="box-2-title"
              type="text"
              label="Title:"
          />
          <field
              name="box-2-content"
              type="textarea"
              label="Content:"
              rows="10" cols="80"
          />
          <field
              name="box-2-link-label"
              type="text"
              label="Link Label:"
          />
          <field
              name="box-2-link-url"
              type="url"
              label="Link URL:"
          />
        </fieldset>
        <fieldset name="box-3" label="Box 3" showon="numberOfBoxes:3">
          <field
              name="box-3-title"
              type="text"
              label="Title:"
          />
          <field
              name="box-3-content"
              type="textarea"
              label="Content:"
              rows="10" cols="80"
          />
          <field
              name="box-3-link-label"
              type="text"
              label="Link Label:"
          />
          <field
              name="box-3-link-url"
              type="url"
              label="Link URL:"
          />
        </fieldset>
      </fields>
    </config>
    <administration>
        <menu></menu>
        <files folder="admin">
            <filename>admin.php</filename>
        </files>
    </administration>
</extension>
